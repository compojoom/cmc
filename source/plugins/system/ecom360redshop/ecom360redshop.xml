    <version>##VERSION##</version>
    <description>PLG_SYSTEM_ECOM360_REDSHOP_DESCRIPTION</description>
    <files>
        ##FILES##
    </files>
    <languages folder="administrator/language">
        ##LANGUAGE_FILES##
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/administrator/components/com_cmc/models/fields/">
