<?xml version="1.0" encoding="utf-8"?>
<extension type="module"
        version="2.5"
        client="administrator"
        method="upgrade"
        >
    <name>@@MODULENAME@@</name>
    <author>compojoom.com</author>
    <creationDate>@@DATE@@</creationDate>
    <copyright>Copyright (C) 2012 Yves Hoppe - compojoom.com. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>yves@compojoom.com</authorEmail>
    <authorUrl>compojoom.com</authorUrl>
    <version>@@VERSION@@</version>
    <description>MOD_CCC_CMC_OVERVIEW_XML_DESCRIPTION</description>
    <files>
        ##PACKAGEFILESMODULE##
    </files>
    <languages folder="administrator/language">
        ##FRONTENDLANGUAGEFILES##
    </languages>
    <help key="CCC_MODULE_OVERVIEW" />
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="version"
                        type="text"
                        default="@@VERSION@@"
                        label="MOD_CCC_CMC_OVERVIEW_VERSION"
                        description="MOD_CCC_CMC_OVERVIEW_VERSION_DESC" />
                <field
                        name="copyright"
                        type="textarea"
                        rows="3"
                        cols="30"
                        default="Copyright (C) 2012 Yves Hoppe -
                                 compojoom.com"
                        label="MOD_CCC_CMC_OVERVIEW_COPYRIGHT"
                        description="MOD_CCC_CMC_OVERVIEW_COPYRIGHT_DESC" />
                <field
                        name="license"
                        type="text"
                        default="GPL v2"
                        label="MOD_CCC_CMC_OVERVIEW_LICENSE"
                        description="MOD_CCC_CMC_OVERVIEW_LICENSE_DESC" />
                <field
                        name="translation"
                        type="textarea"
                        rows="6"
                        cols="30"
                        default="English: compojoom.com
                                 German: compojoom.com"
                        label="MOD_CCC_CMC_OVERVIEW_TRANSLATION"
                        description="MOD_CCC_CMC_OVERVIEW_TRANSLATION_DESC" />
                <field
                        name="description"
                        type="textarea"
                        rows="10"
                        cols="30"
                        default="Google™, Google Maps™, Google Picasa™ and YouTube Broadcast Yourself™
                                are registered trademarks of Google Inc."
                        label="MOD_CCC_CMC_OVERVIEW_DESCRIPTION"
                        description="MOD_CCC_CMC_OVERVIEW_DESCRIPTION_DESC" />

            </fieldset>
            <fieldset name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                        name="cache"
                        type="list"
                        default="0"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>

                <field
                        name="automatic_title"
                        type="radio"
                        default="0"
                        label="COM_MODULES_FIELD_AUTOMATIC_TITLE_LABEL"
                        description="COM_MODULES_FIELD_AUTOMATIC_TITLE_DESC">
                    <option
                            value="0">JNO</option>
                    <option
                            value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
